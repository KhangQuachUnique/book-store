<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="bookstore" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- Entities giữ nguyên -->
        <class>model.User</class>
        <class>model.Book</class>
        <class>model.Category</class>
        <class>model.Review</class>
        <class>model.LikeReview</class>
        <class>model.Wishlist</class>
        <class>model.WishlistItem</class>
        <class>model.Cart</class>
        <class>model.CartItem</class>
        <class>model.Order</class>
        <class>model.OrderItem</class>
        <class>model.Promotion</class>
        <class>model.OrderStatus</class>
        <class>model.Notification</class>
        <class>model.Address</class>

        <properties>
            <!-- JDBC với SSL và params Supabase -->
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://aws-1-ap-southeast-1.pooler.supabase.com:5432/postgres?sslmode=require&amp;prepareThreshold=0"/>
            <property name="jakarta.persistence.jdbc.user" value="postgres.dgnmjowvneyijoioqtuk"/>
            <property name="jakarta.persistence.jdbc.password" value="kadfwfsfsvs"/>

            <!-- Hibernate -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>  <!-- Auto tạo bảng nếu thiếu -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.archive.autodetection" value="class, hbm"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.use_sql_comments" value="true"/>  <!-- Comment SQL trong log -->
            <property name="hibernate.jdbc.lob.non_contextual_creation" value="true"/>  <!-- Fix LOB nếu lỗi -->
        </properties>
    </persistence-unit>
</persistence>