<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <display-name>Archetype Created Web Application</display-name>
    <servlet>
        <servlet-name>Book</servlet-name>
        <servlet-class>controller.BookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Book</servlet-name>
        <url-pattern>/api/book</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>User</servlet-name>
        <servlet-class>controller.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>User</servlet-name>
        <url-pattern>/api/user</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>OrderTracking</servlet-name>
        <servlet-class>controller.OrderTrackingServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>OrderTracking</servlet-name>
        <url-pattern>/order-tracking</url-pattern>
    </servlet-mapping>


    <welcome-file-list>
        <welcome-file>/WEB-INF/views/layout.jsp</welcome-file>
    </welcome-file-list>

</web-app>


